extends templates/predictHeader.jade

block predictContent
	.container.fill
		.col-sm-6.col-sm-offset-3
			h1
				span.fa Change password
			p=message
			form(action="/changepw" method="post")
				div.form-group
					label Current password
					input.form-control(type="password" name="currentpw")
				div.form-group
					label New password
					input.form-control(type="password" name="newpw")
				div.form-group
					label Confirm new password
					input.form-control(type="password" name="newpw2")
				button.btn.btn-warning.btn-lg(type="submit") Change password
			hr
			p
				| Go 
				a(href="/profile") back
				| .
